generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String?
  devices   Device[]
  createdAt DateTime @default(now())
}

model Device {
  id        Int        @id @default(autoincrement())
  name      String
  userId    Int
  readings  Readings[]
  createdAt DateTime   @default(now())

  User User @relation(fields: [userId], references: [id])
}

model Readings {
  id          Int      @id @default(autoincrement())
  deviceId    Int
  temperature Float
  humidity    Float
  light       Float
  rain        Boolean
  createdAt   DateTime @default(now())

  Device Device @relation(fields: [deviceId], references: [id])
}
